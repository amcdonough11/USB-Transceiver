CAPI=2:
name: "u337mg054:ece337:usb_tx_wrapper:1.0.0"
description: USB Transmitter

filesets:
    rtl:
        files:
            - "source/usb_tx_wrapper.sv"
        file_type: systemVerilogSource
        depend:
            - "u337mg054:ece337:clk_div:1.0.0"
            - "u337mg054:ece337:flex_counter:1.0.0"
            - "u337mg054:ece337:nrzi_encoder:1.0.0"
            - "u337mg054:ece337:usb_tx_fsm:1.0.0"

    synth:
        depend:
            - "ece337:tech:AMI_05_LIB"
            - "u337mg054:ece337:usb_tx_wrapper_syn"

    tb:
        files:
            - "testbench/tb_usb_tx_wrapper.sv"
            - "waves/usb_tx_wrapper.do": { file_type: user }
            - "waves/usb_tx_wrapper.gtkw": { file_type: user }
        file_type: systemVerilogSource
        depend:
            - "u337mg054:ece337:data_buffer:1.0.0"

    synfiles:
        depend:
            - "u337mg054:ece337:synfiles"

targets:
    default: &default
        filesets:
            - rtl
        toplevel: usb_tx_wrapper

    sim: &sim
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        toplevel: tb_usb_tx_wrapper
        tools:
            modelsim:
                vsim_options:
                    - -vopt
                    - -voptargs='+acc'
                    - -t ps
                    - -do waves/usb_tx_wrapper.do
                    - -onfinish stop
                    - -do "set PrefSource(OpenOnFinish) 0 ; set PrefMain(LinePrefix) \"\" ; set PrefMain(colorizeTranscript) 1"
                    - -coverage
                vlog_options:
                    - +cover
            verilator:
                verilator_options:
                    - --cc
                    - --trace
                    - --main
                    - --timing
                    - --coverage
                make_options:
                    - -j

    lint:
        <<: *default
        default_tool: verilator
        filesets_append:
            - tb
        tools:
            verilator:
                mode: lint-only
                verilator_options:
                    - --timing
                    - -Wall

    syn:
        <<: *default
        filesets_append:
            - synfiles
        default_tool: design_compiler
        toplevel: usb_tx_wrapper
        tools:
            design_compiler:
                script_dir: "src/u337mg054_ece337_synfiles_0"
                dc_script: "synth.tcl"
                report_dir: "reports"
                target_library: "/home/ecegrid/a/ece337/summer24-refactor/tech/ami05/osu05_stdcells.db"
                libs: "/home/ecegrid/a/ece337/summer24-refactor/tech/ami05/osu05_stdcells.db dw_foundation.sldb"

    syn_sim:
        <<: *sim
        filesets:
            - synth
            - tb

